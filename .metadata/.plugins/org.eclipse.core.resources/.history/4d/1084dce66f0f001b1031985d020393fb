package otherPrograms;

public class PelindromNumber {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int number = 151;
		int rev;
		int sum = 0;
		
		while(number != 0)
		{
			rev = number % 10;
			sum = sum + (rev * 10);
			number = number/10;
			System.out.println(sum);
		}
			
		
		
	}

}
